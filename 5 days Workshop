select ename, deptno
from emp
where job='manager' and deptno=10;

select sal, deptno
from emp
where sal between 1250 and 4000 and deptno=10; 

select ename,job,deptno
from emp
where job='clerk' or job='salesman' and deptno=10 or deptno=30 and sal>1800;

select ename 
from emp
where ename like ('s%');

select ename
from emp
where ename like ('%a');

select ename
from emp
where ename like('_m%');

select ename,hiredate
from emp
where hiredate like('%-04-%');

select ename
from emp
where ename like('%a%a%');

select count(ename) from emp where ename like ('%e%');

select ename,count(ename), avg(sal), sum(sal), max(sal) from emp where job='president' group by ename;

select job, max(sal) from emp group by job;

select job, deptno, max(sal) from emp group by job, deptno

select count(ename), job from emp where ename like '%a%' group by job;

select count(ename), job from emp where ename like '%a%' group by job order by job asc;

select count(*), job from emp where ename like '%a%' group by job order by job desc;

select deptno, count(*) from emp group by deptno having count(*)>=3;

select ename from emp where substring(ename, 1,1) in ('a','e','i','o','u');

select ename from emp where substring(ename, -1,1) in ('a','e','i','o','u');

select ename from emp where sal=(select sal from emp where ename='miller');

select ename,deptno from emp where deptno=(select deptno from emp where ename='smith');

select ename, hiredate from emp where hiredate>(select hiredate from emp where ename='jones'); 

select ename, sal, deptno from emp where sal>2000 and deptno=(select deptno from emp where ename='james');

select * from emp where sal>(select sal from emp where ename='smith') and sal<(select sal from emp where ename='king');

select ename from emp
where deptno=(select deptno from emp where ename='james') and 
sal>(select sal from emp where ename='smith') and 
job=(select job from emp where ename='miller') and
hiredate>(select hiredate from emp where ename='martrin'); 

select dname from dept where deptno=(select deptno from emp where ename='miller');

select count(ename) from emp where deptno=(select deptno from dept where dname='accounting');

select * from emp where job=(select job from emp where ename='miller') and deptno=(select deptno from dept where loc='new_york');

select count(ename) as employee from emp where deptno=(select deptno from dept where dname='accounting');

sr deptno=(select deptno from dept where dname='sales');

select dname from dept where deptno=(select deptno from emp where ename in('smith','king','miller'));

select*from emp where deptno=(select deptno from dept where loc='new_york') or deptno=(select deptno from dept where loc='chicago');

select ename from emp where hiredate>(select hiredate from emp where deptno=10);

select ename,deptno,sal from emp where sal>all(select sal from emp where job='salesman') ; 
select * from emp where hiredate>all(select hiredate from emp where job='clerk') ;
select ename,sal,job from emp where sal<any(select sal from emp where job='manager'); 
select ename,hiredate,job from emp where hiredate<all(select hiredate from emp where job='manager');
select ename from emp where hiredate>all(select hiredate from emp where job='manager') and sal>all(select sal from emp where job='clerk');
select * from emp where job='clerk' and hiredate<any(select hiredate from emp where job='salesman') ;
select * from emp where deptno=any(select deptno from dept where dname in ('accounting','sales'));
select dname,deptno from dept where deptno=(select deptno from emp where ename='smith') or deptno=(select deptno from emp where ename='king') or deptno=(select deptno from emp where ename='miller');
select * from emp where deptno=any(select deptno from dept where loc in ('new_york','chicago'));
select ename from emp where hiredate>all(select hiredate from emp where deptno=10) ;

select max(sal) from emp where sal<(select max(sal) from emp where sal<(select max(sal) from emp));

select min(sal) from emp where sal>(select min(sal) from emp);

-- joins

select count(ename) from emp cross join dept;

select e.ename, d.loc from emp e inner join dept d on e.job='manager' and e.deptno=d.deptno; 

select e.ename, e.sal, d.dname from emp e inner join dept d on d.deptno=e.deptno;

select d.dname, e.sal from dept d inner join emp e on dname='accounting' and d.deptno=e.deptno;

select * from emp e right join dept d on e.deptno=d.deptno;

select * from emp e left join dept d on e.deptno=d.deptno;

select * from emp e right join dept d on e.deptno=d.deptno
union all
select * from emp e left join dept d on e.deptno=d.deptno;

select * from emp;

select * from emp e1 join emp e2 on e1.mgr=e2.empno where e1.ename='smith';

select e1.ename, e1.sal, e2.ename, e2.sal from emp e1 join emp e2 on e1.empno=e2.mgr;

select e1.ename, e1.deptno, e2.ename, e2.deptno from emp e1 join emp e2 on e1.empno=e2.mgr and e2.job='clerk';

select e1.ename, e2.job from emp e1 join emp e2 on e1.mgr=e2.empno and e2.job='analyst';

select e1.ename, e1.sal, e2.ename, e2.sal from emp e1 join emp e2 on e1.mgr=e2.empno where e1.job='manager';

select e1.ename, e1.sal, e2.ename, e2.sal from emp e1 join emp e2 on e2.mgr=e1.empno where e1.sal>e2.sal;

select e.ename, e.sal, d.dname from emp e natural join dept d where e.deptno=(select deptno from emp where job='president') order by  e.sal desc;  

select d.dname, avg(sal) from emp e natural join dept d where e.hiredate> '1980-12-31' group by d.dname order by avg(sal) desc;

select e.ename, e.hiredate, d.dname from emp e natural join dept d where e.hiredate=any(select e.hiredate from emp e where e.deptno=d.deptno);

